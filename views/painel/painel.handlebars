<div class="dashboard">
    <div class="title-container">
        <h2>Painel</h2>
        <a href="/painel/create" class="btn">Criar Pensamento</a>
    </div>
    <h3>Seus Pensamentos</h3>
    {{#if semPensamentos}}
    <p>Sem pensamentos</p>
    {{/if}}
    
    <ul>
        {{#each pensamentos}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="/" class="btn">Editar</a>
                    <form action="/pensamentos/delete" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
        
    
</div>